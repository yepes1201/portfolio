          <BentoGridItem customClass="col-span-8">
            <BentoGridContent imgClass="bg-project-one">
              <h2 class="text-lg font-semibold">Astra</h2>
              <p class="text-sm text-primary">Description</p>
            </BentoGridContent>
          </BentoGridItem>

          <BentoGridItem customClass="col-span-4">
            <BentoGridContent imgClass="bg-project-one">
