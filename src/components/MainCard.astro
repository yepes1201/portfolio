---
// Components
import Social from "./Social.astro";

// Icons
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import GithubIcon from "../icons/GithubIcon.astro";
import XIcon from "../icons/XIcon.astro";
import EnvelopeIcon from "../icons/EnvelopeIcon.astro";
---

<header id="header" class="flex flex-col self-start gap-4 py-6 pt-24">
  <div class="flex items-center justify-between gap-4">
    <div class="flex flex-col gap-4">
      <div>
        <h1 class="text-2xl font-bold">Daniel Yepes</h1>
        <h3 class="text-lg text-primary font-semibold">Software Engineer</h3>
      </div>
      <div class="text-primary">
        <ul class="flex flex-wrap items-center gap-2">
          <li>
            <Social
              href="https://www.linkedin.com/in/daniel-yepes-094757228"
              text="LinkedIn"
              target="_blank"
            >
              <LinkedInIcon />
            </Social>
          </li>
          <li>
            <Social
              href="https://github.com/yepes1201"
              text="Github"
              target="_blank"
            >
              <GithubIcon />
            </Social>
          </li>
          <li>
            <Social
              href="https://twitter.com/daniely1201"
              text="X (Twitter)"
              target="_blank"
            >
              <XIcon />
            </Social>
          </li>
          <li>
            <Social isEmail text="yepes1201@gmail.com">
              <EnvelopeIcon />
            </Social>
          </li>
        </ul>
      </div>
    </div>
    <img
      class="w-[132px] h-[132px] hidden md:block rounded-full object-cover"
      src="https://images.unsplash.com/photo-1534972195531-d756b9bfa9f2?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
      alt="daniel yepes photo"
    />
  </div>
</header>
